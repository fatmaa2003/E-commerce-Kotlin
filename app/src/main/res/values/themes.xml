<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.EcommerceKotlin" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_surface</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="product_price">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_surface</item>
        <item name="android:fontFamily">@font/semibold</item>
    </style>

    <style name="CornerCut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>


