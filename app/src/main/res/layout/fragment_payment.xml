<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".presentation.screens.PaymentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_picture"
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:src="@drawable/houda"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircularImageView" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mahmoud Ali"
            android:textColor="@color/dark_surface"
            android:gravity="center_horizontal"
            android:fontFamily="@font/extrabold"
            android:textSize="32sp"
            />
        <TextView
            android:id="@+id/profile_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="mahmoud shehata"
            android:textSize="14dp"
            android:textColor="@color/grey60"
            android:layout_marginTop="7dp"

            />
        <include
            android:id="@+id/profile_following_button"
            layout="@layout/following_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23dp"
             />



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDE4E4"
            android:layout_marginTop="35dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Cart"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="@font/semibold"
                android:layout_marginStart="9dp" />

            <ImageView
                android:id="@+id/goToCartButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/cartt"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDE4E4"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Preference"
            android:fontFamily="@font/regular"
            android:textSize="25sp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="7dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6E6E70"
                    android:textSize="19sp"
                    android:text="Main department"
                    android:layout_marginStart="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Men"
                    android:fontFamily="@font/regular"
                    android:textSize="20sp"
                    android:layout_marginStart="7dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/w"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="190dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6E6E70"
                    android:textSize="19sp"
                    android:text="Size"
                    android:layout_marginStart="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26-S"
                    android:fontFamily="@font/regular"
                    android:textSize="20sp"
                    android:layout_marginStart="7dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/twenty"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="190dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6E6E70"
                    android:textSize="19sp"
                    android:text="Favourite color"
                    android:layout_marginStart="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orange"
                    android:fontFamily="@font/regular"
                    android:textSize="20sp"
                    android:layout_marginStart="7dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/orangedot"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="190dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDE4E4"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="7dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/card_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            />



        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#EDE4E4"
            android:layout_marginTop="35dp"
            />
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"

            >

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Addresses"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Address Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3910 Crim Lane"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Greendale County, Colorado."
                    android:textSize="16sp"
                    android:textColor="#6E6E70"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zip Code 410348"
                    android:textSize="16sp"
                    android:textColor="#6E6E70"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ava Johnson - Home"
                    android:textSize="16sp"
                    android:textColor="#6E6E70"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21 Yellow Av"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Greendale County, Colorado."
                    android:textSize="16sp"
                    android:textColor="#6E6E70"
                    android:layout_marginTop="4dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zip Code 410236"
                    android:textSize="16sp"
                    android:textColor="#6E6E70"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ava Johnson - Work"
                    android:textSize="16sp"
                    android:textColor="#6E6E70"
                    android:layout_marginTop="2dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adresse"
            android:background="@drawable/text"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:padding="15dp"
            android:layout_marginTop="16dp"/>


    </LinearLayout>
</ScrollView>
