<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <include
        android:id="@+id/bottom_sheet_store_image"
        layout="@layout/circular_image"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        >
        <TextView
            android:id="@+id/bottom_sheet_following_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lacoste"
            android:textSize="16sp"
            android:textColor="@color/dark_surface"
            />

        <TextView
            android:id="@+id/bottom_sheet_following_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store"
            android:textSize="14sp"
            android:textColor="@color/grey60"
            />
    </LinearLayout>

    <include
        android:id="@+id/profile_bottom_sheet_following_button"
        layout="@layout/following_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        />
</LinearLayout>