<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/grey"
    android:orientation="vertical"
    android:id="@+id/custom_dialog">

    <TextView
        android:id="@+id/itemBrandAndTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:text="ABO TREKAAA"
        android:fontFamily="@font/extrabold"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        android:paddingBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/itemImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/treka"
            app:shapeAppearanceOverlay="@style/CornerCut"/>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bookmark"
                    android:background="@drawable/dialog_button_background_shape"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="10dp"
                    android:layout_marginBottom="8dp"
                    />

                <ImageButton
                    android:id="@+id/shareButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share"                    android:background="@drawable/dialog_button_background_shape"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="10dp"
                    />

                <ImageButton
                    android:id="@+id/confirmButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dialog_button_background_shape"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:src="@drawable/check"
                   android:layout_marginTop="8dp"
                />
                <ImageButton
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dialog_button_background_shape"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="10dp"
                    android:src="@drawable/minus"
                    android:layout_marginTop="8dp"
                    />
            </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:paddingVertical="18dp"
        app:shapeAppearanceOverlay="@style/CornerCut"
        app:cardCornerRadius="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Bershka Mom Jeans"
                    android:paddingStart="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bershka"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Bershka"
                        android:fontFamily="@font/extrabold"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                    android:background="@android:color/transparent"/>

                </FrameLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
