<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="10dp"
    android:id="@+id/layout"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/freq_visited_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/CornerCut"
        />
    <TextView
        android:id="@+id/freq_visited_type_text"
        android:layout_toRightOf="@id/freq_visited_item_image"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_surface"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/freq_visited_category_text"
        android:layout_toRightOf="@id/freq_visited_item_image"
        android:layout_below="@id/freq_visited_type_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/inactive_text"

        />



</RelativeLayout>