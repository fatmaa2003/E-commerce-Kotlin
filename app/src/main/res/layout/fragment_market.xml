<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.screens.MarketFragment">



    <TextView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Market"
        android:gravity="center"
        android:textSize="30sp"
        android:fontFamily="@font/bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_bar"
        android:orientation="horizontal"
        android:layout_margin="25dp"
        android:padding="10dp"
        android:background="@drawable/search_shape"
        android:gravity="center_vertical">



        <TextView
            android:id="@+id/search_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:textSize="18sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_icon"
            android:paddingEnd="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <!-- Featured Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tabFeatured"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:gravity="center"
                android:padding="10dp"
                android:text="Featured"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <View
                android:id="@+id/dotFeatured"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:background="@drawable/dot_background"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Collection Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tabCollection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:gravity="center"
                android:padding="10dp"
                android:text="Collection"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <View
                android:id="@+id/dotCollection"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:background="@drawable/dot_background"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Stores Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tabStores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:gravity="center"
                android:padding="10dp"
                android:text="Stores"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <View
                android:id="@+id/dotStores"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:background="@drawable/dot_background"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Tags Tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tabTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:gravity="center"
                android:padding="10dp"
                android:text="Tags"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <View
                android:id="@+id/dotTags"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:background="@drawable/dot_background"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- Container for displaying fragments -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/progressbar"
        android:id="@+id/progressBar"
        android:visibility="gone"/>

</LinearLayout>
